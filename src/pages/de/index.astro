---
import Nav from "../../components/Nav.astro";
import PersonalBanner from "../../components/PersonalBanner.astro";
import Base from "../../layouts/Base.astro";

const props = {
  title: "Bernhard Steirer",
  description: "Meine persönliche Portfolio-Website.",
  keywords: [
    "Resume",
    "Portfolio",
    "Developer",
    "Astro",
    "Physik",
    "Entwickler",
    "Software",
  ],
  author: "Bernhard Steirer",
};
---

<Base
  title={props.title}
  description={props.description}
  author={props.author}
  keywords={props.keywords}
>
  <main>
    <Nav />
    <div
      class="w-11/12 flex justify-between [&>*]:h-full [&>*]:mx-8 float-right mt-10"
    >
      <div class="w-7/12 ml-15">
        <h1 class="leading-normal text-5xl font-extrabold">
          Hi!<br />
          Ich bin Bernhard
        </h1>
        <p class="text-lg leading-relaxed">
          Ich bin Software-Engineer, angehender Physik-Student an der TU
          München, leidenschaftlicher Geiger und ein lebenslanger Lerner.
          <br />
          <br />
          Gerade absolviere ich meinen elfmonatigen Zivilersatzdienst in Tansania,
          bin aber immer auf der Suche nach dem nächsten Abenteuer.
        </p>
      </div>
      <PersonalBanner />
    </div>
  </main>
</Base>
